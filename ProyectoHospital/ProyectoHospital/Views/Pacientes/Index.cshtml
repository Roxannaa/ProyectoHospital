@model IEnumerable<ProyectoHospital.Models.Pacientes>

@{
    ViewBag.Title = "Index";
}

<button type="button" class="btn btn-outline-primary">
    @Html.ActionLink("Create New", "Create")
</button>
<br />
<p> @Html.ActionLink("Reporte", "Imprimir")</p>
<br />


<h2>Index</h2>
<form action="Pacientes" method="get">
    <input type="text" name="consulta" placeholder="Valor a buscar" />
    <input type="submit" value="BUSCAR" />
</form>

<br />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asegurado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asegurado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@model IEnumerable<ProyectoHospital.Models.Medicos>

@{
    ViewBag.Title = "Index";
}

<button type="button" class="btn btn-outline-primary">
    @Html.ActionLink("Create New", "Create")
</button>
<br />
<p> @Html.ActionLink("Crear Reporte", "Imprimir")</p>
<br />


<form action="Medicos" method="get">
    <input type="text" name="consulta" placeholder="Valor a buscar" />
    <input type="submit" value="BUSCAR" />
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exequatur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exequatur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
